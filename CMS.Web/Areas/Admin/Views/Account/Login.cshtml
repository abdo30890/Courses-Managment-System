@model  CMS.Web.Areas.Admin.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_OfflineLayout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                <div class="form-group">
                    @Html.LabelFor(d => d.Email, new { @class = "small mb-1" })
                    @Html.TextBoxFor(d => d.Email, new { @class = "form-control py-4", placeholder = "Enter email address" })
                   
                    @Html.LabelFor(d => d.Password, new { @class = "small mb-1" })
                    @Html.TextBoxFor(d => d.Password, new { @class = "form-control py-4", placeholder = "Enter Password" })
                    <div class="form-group">
                        <div class="custom-control custom-checkbox"><input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" /><label class="custom-control-label" for="rememberPasswordCheck">Remember password</label></div>
                    </div>
                    <button type="submit" , class="btn btn-primary btn-block">Login</button>
                </div>
                }
                    <div class="card-footer text-center">
                        <div class="small"><a href="../../../../dist/register.html">Need an account? Sign up!</a></div>
                    </div>
                    @if (Model != null && Model.Massage != null)
                    {
                        <div class="alert alert-danger">
                            @Model.Massage
                        </div>
                    }
                </div>
    </div>
</div>

</div>
